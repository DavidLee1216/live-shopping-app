<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/black"
    >

    <org.webrtc.SurfaceViewRenderer
        android:id="@+id/local_video_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:keepScreenOn="true"
        />

    <ImageView
        android:id="@+id/live_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/live_bg"
        />

    <ImageView
        android:id="@+id/LiveLogoView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:src="@drawable/logo_red"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="44dp"
                    >
                    <TextView
                        android:id="@+id/onAir"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:layout_marginStart="20dp"
                        android:textStyle="normal"
                        android:textSize="18sp"
                        android:textColor="#ffffff"
                        tools:text="On Air"
                        android:background="@drawable/red_round_corner"
                        />

                    <TextView
                        android:id="@+id/timer"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="5dp"
                        android:text="17:10"
                        android:textAlignment="textStart"
                        android:textSize="18sp"
                        android:textStyle="normal"
                        android:textColor="#707070"
                        android:letterSpacing="-0.01"
                        android:lineSpacingExtra="2sp"
                        android:background="@drawable/button_bg_white"
                        android:drawableLeft="@drawable/timer"
                        android:layout_toRightOf="@+id/onAir"
                        android:paddingHorizontal="5dp"
                        tools:ignore="RtlCompat"
                        />

                </RelativeLayout>

                <ImageView
                    android:id="@+id/closeScreen"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="7dp"
                    android:layout_marginRight="20dp"
                    android:src="@drawable/x_close" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/streamingText"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:paddingHorizontal="30dp"
                    android:fontFamily="@font/nanum_square"
                    android:text="제목"
                    android:textStyle="normal"
                    android:textSize="18sp"
                    android:textColor="#ffffff"
                    android:letterSpacing="-0.01"
                    android:lineSpacingExtra="5sp"
                    tools:ignore="RtlCompat"

                    />
<!--            <TextView-->
<!--                android:id="@+id/liveWarningText"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_centerHorizontal="true"-->
<!--                android:layout_gravity="top"-->
<!--                android:layout_marginLeft="10dp"-->
<!--                android:layout_marginTop="0dp"-->
<!--                android:layout_marginRight="10dp"-->
<!--                android:layout_marginBottom="50dp"-->
<!--                android:text="5분 남았습니다."-->
<!--                android:textAlignment="center"-->
<!--                android:textColor="#ff5570"-->
<!--                android:textFontWeight="700"-->
<!--                android:textSize="20sp"-->
<!--                tools:ignore="RtlCompat"-->
<!--                android:background="@drawable/warning_bg"-->

<!--                android:paddingTop="10dp"-->
<!--                android:paddingBottom="10dp"-->
<!--                />-->
            </RelativeLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="35dp"
            android:layout_marginTop="230dp"
            >

            <TextView
                android:id="@+id/liveShopping"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="50dp"
                android:fontFamily="@font/nanum_square"
                android:text="Live Shopping 방송 시작하기"
                android:textStyle="normal"
                android:textSize="26sp"
                android:textColor="#ffffff"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="-7sp"
                android:gravity="center_horizontal"
                android:textAlignment="center"
                tools:ignore="RtlCompat" />
        </RelativeLayout>

        <TextView
            android:id="@+id/stopText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_gravity="top"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/nanum_square"
            android:text="방송이 종료되었습니다.\n 시청해주셔서 감사합니다."
            android:textStyle="normal"
            android:textSize="26sp"
            android:textColor="#ffffff"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="10sp"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            tools:ignore="RtlCompat"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="45dp"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true"
            >
            <TextView
                android:id="@+id/startText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="70dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:fontFamily="@font/nanum_square"
                android:text="아래 버튼을 누르시면 라이브 방송이 시작됩니다.\n 시작을 원하신다면 버튼을 눌러주세요."
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                tools:ignore="RtlCompat"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/play_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/castButton"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/play"
                />

            <TextView
                android:id="@+id/castButton"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="@drawable/button_bg_transparent"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                android:paddingRight="30dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nanum_square"
                android:text="방송 시작"
                android:gravity="center"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textFontWeight="900"
                android:textStyle="normal"
                android:textSize="18sp"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="2sp"
                tools:ignore="RtlCompat" />
            <ImageView
                android:id="@+id/cameraChangeButton1"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/castButton"
                android:layout_alignParentBottom="true"
                android:src="@drawable/camerachange" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            >
            <ImageView
                android:id="@+id/stop_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/stopButton"
                android:layout_marginLeft="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/stop"
                />
            <TextView
                android:id="@+id/stopButton"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:background="@drawable/button_bg_transparent"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                android:paddingRight="30dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/nanum_square"
                android:text="방송 종료"
                android:gravity="center"
                android:textAlignment="textEnd"
                android:textColor="#FFFFFF"
                android:textFontWeight="900"
                android:textStyle="normal"
                android:textSize="18sp"
                android:letterSpacing="-0.01"
                android:lineSpacingExtra="2sp"
                tools:ignore="RtlCompat" />

            <ImageView
                android:id="@+id/cameraChangeButton2"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_toRightOf="@id/stopButton"
                android:layout_alignParentBottom="true"
                android:src="@drawable/camerachange" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            >
            <Button
                android:id="@+id/returnButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="30dp"
                android:layout_marginBottom="150dp"
                android:backgroundTint="@android:color/white"
                android:paddingHorizontal="30dp"
                android:paddingVertical="10dp"
                android:fontFamily="@font/nanum_square"
                android:text="돌아가기"
                android:textAlignment="center"
                android:textColor="@android:color/black"
                android:textFontWeight="900"
                android:textSize="20sp"
                tools:ignore="RtlCompat" />
        </RelativeLayout>


    </RelativeLayout>
</RelativeLayout>